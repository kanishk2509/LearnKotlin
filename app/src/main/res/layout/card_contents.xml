<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_id"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <TextView
            android:id="@+id/subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubHead"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />


        <TextView
            android:id="@+id/subDesc"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="SubHeadDescription"
            android:textColor="@android:color/darker_gray"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toBottomOf="@+id/subheading" />

        <TextView
            android:id="@+id/pointNum"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:text="1."
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toBottomOf="@+id/subDesc"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/pointHead"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:text="PointHead"
            card_view:layout_constraintTop_toBottomOf="@+id/subDesc"
            card_view:layout_constraintStart_toEndOf="@+id/pointNum"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/pointDesc"
            android:layout_width="356dp"
            android:layout_height="19dp"
            android:text="Point Description"
            card_view:layout_constraintTop_toBottomOf="@+id/pointHead"
            android:layout_marginTop="16dp"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="363dp"
            android:layout_height="208dp"
            android:background="@color/colorWhite"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.6"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toBottomOf="@+id/pointDesc"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>